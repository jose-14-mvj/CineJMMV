<Window x:Class="WpfAppNuevo1.BienvenidaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNuevo1"
        mc:Ignorable="d"
        Title="BienvenidaUsuario"     Height="600" Width="460"
     Icon="/imagenes/CJMMV.png"
    Background="#0F394F"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="7">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="419*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.Background>

            <ImageBrush ImageSource="/imagenes/fonCM.png" />


        </Grid.Background>
        <Label
        x:Name="lblbienvenido" 
        Content="Bienvenid@ al sistema CINE-JMMV :)"
           Grid.ColumnSpan="2"
            Grid.Row="1"
           Margin="26,0,0,0"
        FontSize="22" HorizontalAlignment="Left"
        />
        <Image Source="/imagenes/CJMMV.png"
           Height="300"
           Width="300" Grid.Column="1" Margin="46,0,73,170" Grid.RowSpan="2" 
           
           />
        <Button x:Name="btnData"
            
            Grid.Row="3"
            Content="Ver Estrenos recientes"
            FontSize="12"  Grid.ColumnSpan="2" Margin="20,5,20,5" Click="btnData_Click" />
        <Button x:Name="btnVerC"
            
            Grid.Row="2"
            Content="VER CARTELERA DE PELICULAS"
            FontSize="12"  Grid.ColumnSpan="2" Margin="20,5,20,5" Click="btnVerC_Click" />

    </Grid>
</Window>
