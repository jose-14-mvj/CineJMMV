<Window x:Class="WpfAppNuevo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNuevo1"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="440"
         Icon="/imagenes/CJMMV.png"
        Background="#0F394F"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="7">
        <Grid.Background>

            <ImageBrush ImageSource="/imagenes/fonCM.png" />

        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="27*"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>



        </Grid.RowDefinitions>
        <Label x:Name="lblTitulo"
               Grid.ColumnSpan="2"
               Content="L O G I N"
               FontSize="30" Margin="98,28,108,11" Height="54" Grid.Column="1"/>
        <Label x:Name="lblCorreo"
               Content="Correo-JHRA:"
               FontSize="20"
               Grid.Row="1" Margin="0,29" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCorreo"
                
                 Grid.Row="1"
                 Grid.Column="2" Margin="10,29" 
                 LostFocus="txtCorreo_LostFocus" 
                 />

        <Label x:Name="lblPassword"
               Content="Contraseñafgdgdfdd:"
               FontSize="20"
               Grid.Row="2" Margin="0,24,32,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"/>
        <PasswordBox x:Name="txtPasword"
                 Grid.Row="2"
                 Grid.Column="2"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                     Background="AliceBlue"
                     Opacity="0.7"
                 Height="35"
                 Margin="10,29" RenderTransformOrigin="0.488,1.057"
                      LostFocus="txtPasword_LostFocus"
 
                    />
        <Button x:Name="btnLimpiar"
                Content="Limpiar"
                Grid.Row="3" Click="btnLimpiar_Click" Margin="10" Grid.ColumnSpan="2"
            />
        <Button x:Name="btnAceptar"
                Content="Aceptar(ingresar)"
                Grid.Row="3"
                Grid.Column="2"  Click="btnAceptar_Click" Margin="10"
            />
        <Button x:Name="btnRegistrar"
                Content="Registrarse"
                Grid.Row="4"
                Grid.ColumnSpan="2"  Margin="10" Click="btnRegistrar_Click"
            />
        <Label x:Name="lblMensaje"
               Foreground="Red"
                Grid.Row="5"
               FontSize="15" Margin="10,29" Height="34" Grid.ColumnSpan="3" Width="398"/>
        <Button x:Name="btnVerC"
                Content="Ver Cartelera"
                Grid.Row="4"
                Grid.Column="2"   
                Margin="10" Click="btnVerC_Click_1" 
                
            />




    </Grid>
</Window>