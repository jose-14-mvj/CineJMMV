<Window x:Class="WpfAppNuevo1.VerCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNuevo1"
        mc:Ignorable="d"
       Height="550" Width="440"
         Icon="/imagenes/CJMMV.png"
        Background="#0F394F"
      >
    <Grid Margin="6">
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/fonCM.png" />

        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTitulo"
            Content="CINE-JMMV"
            Grid.ColumnSpan="2"
            FontSize="19"
            FontWeight="Bold"
            HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Label Content="Cartelera de Peliculas:"
                FontSize="20" 
                FontWeight="Bold"/>

            <ListBox x:Name="lstBProductos" 
                  Height="370"
                  Background="Gray"
                  Opacity="0.7"
                  ItemsSource="{Binding ListaProductos}"
                  SelectedItem="{Binding productoSel}"
                  >

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Nombre}" />
                            <Label Content=" - " />
                            <Label Content="{Binding Precio}" />
                            <Label Content=" - " />
                            <Label Content="{Binding Horario}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>

      
        <Button x:Name="btnVolver"
      Grid.Row="3" Grid.Column="1"
      Margin="10,0"
      FontSize="17"
      FontWeight="Bold"
      Content="Regresar->INICIO" Click="btnVolver_Click" 
      />
        <Button x:Name="btnSalir"
        Grid.Row="3" 
        Grid.Column="0"
        Margin="10,0"
        FontSize="17"
        FontWeight="Bold"
        Content="SALIR" Click="btnSalir_Click" 
        />


    </Grid>
</Window>
