<Window x:Class="WpfAppNuevo1.wpfNVen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNuevo1"
        mc:Ignorable="d"
         Title="sign up(REGISTRO DE PERSONAL)" Height="550" Width="440"
         Icon="/imagenes/CJMMV.png"
        Background="#0F394F"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="7">
        <Grid.Background>

            <ImageBrush ImageSource="/imagenes/fonCM.png" />


        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>



        </Grid.RowDefinitions>
        <Label x:Name="lblTitulo"
               Grid.ColumnSpan="2"
               Content="C I N E  -  J M M V"
               FontSize="30" Height="44" Margin="10"/>
        <Label x:Name="lblNombre"
               Content="Nombre:"
               FontSize="20"
               Grid.Row="1"/>
        <TextBox x:Name="txtNombre"
                 Grid.Row="1"
                 Grid.Column="1" 
                />
        <Label x:Name="lblAP"
               Content="Ap. Paterno:"
               FontSize="20"
               Grid.Row="2"/>
        <TextBox x:Name="txtAP"
                 Grid.Row="2"
                 Grid.Column="1"
                />
        <Label x:Name="lblAM"
               Content="Ap. Materno:"
               FontSize="20"
               Grid.Row="3"/>
        <TextBox x:Name="txtAM"
                 Grid.Row="3"
                 Grid.Column="1" Margin="10,9,10,0" VerticalAlignment="Top"
                />
        <Label x:Name="lblCelular"
               Content="NºCelular:"
               FontSize="20"
               Grid.Row="4"/>
        <TextBox x:Name="txtCelular"
                 Grid.Row="4"
                 Grid.Column="1"
                />
        <Label x:Name="lblFNacimiento"
               Content="Año de Nacimiento:"
               FontSize="20"
               Grid.Row="5"/>
        <TextBox x:Name="txtFNacimiento"
                 Grid.Row="5"
                 Grid.Column="1"
                />
        <Label x:Name="lblCorreo"
               Content="Correo Electronico:"
               FontSize="20"
               Grid.Row="6"/>
        <TextBox x:Name="txtCorreo"
                 IsEnabled="False"
                 Grid.Row="6"
                 Grid.Column="1" Margin="10,9,10,0" Height="35" VerticalAlignment="Top"
                 />

        <Label x:Name="lblPassword"
               Content="Contraseña:"
               FontSize="20"
               Grid.Row="7"/>
        <PasswordBox x:Name="txtPasword"
                 Grid.Row="7"
                 Grid.Column="1"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                     Background="AliceBlue"
                     Opacity="0.7"
                 Height="35"
                 Margin="10,0"/>
        <Button x:Name="btnLimpiar"
                Content="Limpiar"
                Grid.Row="8" Click="btnLimpiar_Click"
            />
        <Button x:Name="btnAceptar"
                Content="Aceptar"
                Grid.Row="8"
                Grid.Column="1"  Click="btnAceptar_Click"
            />
        <Label x:Name="lblMensaje"
               Foreground="Red"
                Grid.Row="9"
               FontSize="15"
                   Grid.ColumnSpan="2"/>




    </Grid>
</Window>
